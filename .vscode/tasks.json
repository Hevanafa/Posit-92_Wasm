{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Demo",
			"type": "shell",
			"command": "bun",
			"args": ["run", "${workspaceFolder}/scripts/compile_demo.ts"],
			"group": { "kind": "build", "isDefault": true },
			"presentation": {
				"reveal": "always",
				"showReuseMessage": false,
				"clear": true
			},
			"options": {
				"cwd": "${fileDirname}",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c"]
				}
			}
		}
	]
}
