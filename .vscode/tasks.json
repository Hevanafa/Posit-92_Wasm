{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Demo",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"${workspaceFolder}/scripts/compile_demo.ts"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"showReuseMessage": false,
				"clear": true
			},
			"options": {
				"cwd": "${fileDirname}",
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/d",
						"/c"
					]
				}
			}
		},
		{
			"label": "Cleanup Experimental",
			"type": "shell",
			"command": "bun cleanup.ts",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/experimental",
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/d",
						"/c"
					]
				}
			}
		},
		{
			"label": "Start Server",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"${workspaceFolder}/scripts/server.ts"
			],
			"group": "none",
			"presentation": {
				"group": "server-group",
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "${fileDirname}",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c" ]
				}
			}
		},
		{
			"label": "Rebuild Glue Code",
			"type": "shell",
			"command": "tsc",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/experimental",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c" ]
				}
			}
		}
	]
}
