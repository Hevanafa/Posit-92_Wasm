{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Demo",
			"type": "shell",
			"command": "bun",
			"args": ["run", "compile_demo.ts"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"options": {
				"cwd": "${fileDirname}",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/d", "/c"]
				}
			},
			"problemMatcher": []
		}
	]
}
